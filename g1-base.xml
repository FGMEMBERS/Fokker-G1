<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <sim include="Systems/views.xml">
    
    <description>Fokker G1 (YASim)</description>
    <author>BARANGER Emmanuel (3D/FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
    
    <fuel-fraction>0.8</fuel-fraction>
    
    <startup>
      <splash-texture>Aircraft/Fokker-G1/g1-splash.png</splash-texture>
    </startup>
    
    <model>
      <path>Aircraft/Fokker-G1/Models/g1.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>
    
    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Fokker-G1/Models/Effects/guns/submodels.xml</path>
    </submodels>
    
    <sound>
      <path>Aircraft/Fokker-G1/Sounds/g1-sound.xml</path>
    </sound>
    
    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int   n="0"  type="int">  0 </int>                                         <!-- 0 immat -->
        <int   n="1"  type="int">  0 </int>                                         <!-- 1 immat -->
        <int   n="2"  type="int">  0 </int>                                         <!-- 2 immat -->
        <int   n="3"  type="int">  0 </int>                                         <!-- 3 immat -->
        <int   n="4"  type="int">  0 </int>                                         <!-- 4 immat -->
        <int   n="5"  type="int">  0 </int>                                         <!-- 5 immat -->
        <int   n="6"  type="bool"> 1 </int>                                         <!-- 6 -->
        <int   n="7"  type="int">  0 </int>                                         <!-- 7  -->
        <int   n="8"  alias="/systems/electrical/outputs/nav-lights">  0 </int>     <!-- 8 nav-lights -->
        <int   n="9"  alias="/sim/model/lights/beacon/state">  false </int>         <!-- 9 strobe-lights -->
        <float n="0"  alias="/sim/model/door-positions/crew/position-norm"/>
        <float n="1"  alias="/sim/model/door-positions/passenger/position-norm"/>
        <float n="2"  alias="/position/gear-agl-m"> 0 </float>                       <!-- altitude for MP shadow -->
        <float n="3"  alias="/position/altitude-ft"> 0 </float>                      <!-- altitude for Smoke/Trail -->
        <float n="4"  alias="/engines/engine[0]/rpm"/>
        <float n="5"  alias="/engines/engine[0]/cranking"/>
        <float n="6"  alias="/engines/engine[1]/rpm"/>
        <float n="7"  alias="/engines/engine[1]/cranking"/>
        <float n="8"  alias="/gear/gear[0]/wow/"/>
        <float n="9"  alias="/gear/gear[1]/wow/"/>
        <float n="10" alias="/gear/gear[2]/wow/"/>
        <float n="11" alias="/gear/gear[0]/rollspeed-ms"/>
        <float n="12" alias="/gear/gear[1]/rollspeed-ms"/>
        <float n="13" alias="/gear/gear[2]/rollspeed-ms"/>
        <!-- For Bombable -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>
        <string n="9" type="string" />
      </generic>
    </multiplay>
    
    <flaps>
      <setting> 0.00 </setting>
      <setting> 0.25 </setting>
      <setting> 0.50 </setting>
      <setting> 0.75 </setting>
      <setting> 1.00 </setting>
    </flaps>
    
    <help include="Systems/help.xml"/>
    
    <menubar include="Dialogs/g1-menu.xml"/>
    
  </sim>
  
  <input include="Systems/g1-keyboard.xml"/>
  
  <controls include="Systems/controls.xml"/>
  
  <engines include="Systems/engines.xml"/>
  
  <nasal>
    <doors>
      <file>Aircraft/Fokker-G1/Nasal/doors.nas</file>
    </doors>
    <g1>
      <file>Aircraft/Fokker-G1/Nasal/liveries.nas</file>
      <file>Aircraft/Fokker-G1/Nasal/light.nas</file>
    </g1>
    <guns>
      <file>Aircraft/Fokker-G1/Nasal/weapons.nas</file>
      <file>Aircraft/Fokker-G1/Nasal/revi.nas</file>
    </guns>
  </nasal>
  
</PropertyList>
